{
  "manifest_version": 3,
  "name": "AI Webpage Assistant",
  "version": "1.0",
  "description": "Chat with AI about current webpage content",
  "icons": {
    "128": "icons/icon.svg"
  },
  "action": {
    "default_title": "AI Chat Sidebar",
    "default_icon": "icons/icon.svg"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles/sidebar.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["sidebar.html", "sidebar.js", "styles/sidebar.css", "options.html", "options.js"],
    "matches": ["<all_urls>"]
  }],
  "options_page": "options.html"
} 